#include <stdio.h>
#include <locale.h>


int main(){
	setlocale(LC_ALL,"Portuguese");
	int num1, num2;
	
	printf("Olá! vamos escrever um programa fonte na Linguagem C que receba dois números inteiros e informe qual deles é o menor!\n");
	
	printf("\nDigite o primeiro número: \n");
	scanf("%d",&num1);
	
	printf("Digite o segundo número: \n");
	scanf("%d",&num2);
	
	if(num1 == num2)
	{
		printf("Os números são iguais!");
	}
	else if(num1<num2)
	{
		printf("O número %d é menor que o número %d!", num1, num2);
	}
	else
	{
		printf("O número %d é menor que o número %d!", num2, num1);
	}
}
